<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    android:backgroundTint="#050505"
    android:orientation="vertical"
    tools:context=".SearchMealByIngredients">

    <EditText
        android:id="@+id/editTextTextMealName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Type Meal Name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="65dp" />

    <Button
        android:id="@+id/buttonapi"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="355dp"
        android:layout_marginTop="-50dp"
        android:backgroundTint="#606060"
        android:text="Retrieve Meals "
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="307dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="530dp"
        android:layout_marginTop="-55dp"
        android:backgroundTint="#606060"
        android:text="Save meals to Database"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="304dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </ScrollView>


</LinearLayout>